{
	"$schema": "https://biomejs.dev/schemas/2.3.14/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true,
		"defaultBranch": "main"
	},
	"files": {
		"includes": ["**", "!**/*.css"],
		"ignoreUnknown": true
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"lineWidth": 100,
		"lineEnding": "lf",
		"attributePosition": "auto"
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"useExhaustiveDependencies": "warn",
				"noUnusedVariables": "warn",
				"noUnusedImports": "warn",
				"noUndeclaredVariables": "error"
			},
			"style": {
				"noNonNullAssertion": "off",
				"useFilenamingConvention": {
					"level": "warn",
					"options": {
						"strictCase": false,
						"requireAscii": true,
						"filenameCases": ["kebab-case", "export"]
					}
				},
				"useNamingConvention": {
					"level": "warn",
					"options": {
						"strictCase": false,
						"conventions": [
							{
								"selector": { "kind": "function" },
								"formats": ["camelCase", "PascalCase"]
							},
							{
								"selector": { "kind": "variable" },
								"formats": ["camelCase", "PascalCase", "CONSTANT_CASE"]
							},
							{
								"selector": { "kind": "typeLike" },
								"formats": ["PascalCase"]
							},
							{
								"selector": { "kind": "interface" },
								"formats": ["PascalCase"]
							},
							{
								"selector": { "kind": "enum" },
								"formats": ["PascalCase"]
							},
							{
								"selector": { "kind": "enumMember" },
								"formats": ["PascalCase", "CONSTANT_CASE"]
							},
							{
								"selector": { "kind": "typeParameter" },
								"formats": ["PascalCase"]
							},
							{
								"selector": { "kind": "classProperty" },
								"formats": ["camelCase"]
							},
							{
								"selector": { "kind": "classMethod" },
								"formats": ["camelCase"]
							},
							{
								"selector": { "kind": "objectLiteralProperty" },
								"formats": ["camelCase", "PascalCase", "CONSTANT_CASE", "snake_case"]
							},
							{
								"selector": { "kind": "typeProperty" },
								"formats": ["camelCase"]
							}
						]
					}
				}
			},
			"suspicious": {
				"noExplicitAny": "warn",
				"noConsole": "warn"
			},
			"complexity": {
				"noExcessiveCognitiveComplexity": {
					"level": "warn",
					"options": { "maxAllowedComplexity": 25 }
				}
			},
			"performance": {
				"noBarrelFile": "warn",
				"noReExportAll": "warn"
			},
			"a11y": {
				"noLabelWithoutControl": "off",
				"noStaticElementInteractions": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double",
			"semicolons": "always",
			"bracketSpacing": true,
			"arrowParentheses": "always"
		}
	},
	"css": {
		"parser": {
			"cssModules": false
		},
		"linter": {
			"enabled": false
		},
		"formatter": {
			"enabled": false
		}
	},
	"assist": {
		"actions": {
			"source": {
				"organizeImports": {
					"level": "on"
				}
			}
		}
	},
	"overrides": [
		{
			"includes": ["**/*.test.ts", "**/*.test.tsx", "**/*.spec.ts", "**/*.spec.tsx"],
			"linter": {
				"rules": {
					"suspicious": {
						"noConsole": "off"
					}
				}
			}
		},
		{
			"includes": ["**/index.ts", "**/index.tsx"],
			"linter": {
				"rules": {
					"performance": {
						"noBarrelFile": "off",
						"noReExportAll": "off"
					}
				}
			}
		}
	]
}
